{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "src/",
    "strict": false,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.vue", "src/**/*.md"],
  "exclude": ["node_modules", "template", "template-light", "src2"]
}
